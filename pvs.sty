\def\program{
 \par \def\baselinestretch{\proglinestretch} \pfontsize
 \let\@startfield=\@@startfield  \let\@stopfield=\@@stopfield
 \let\@contfield=\@@contfield
 \let\zi=\@zi   \let\ii=\@ii   \let\c=\@c
 \let\zo=\@zo   \let\oo=\@oo   \let\cc=\@cc
 \let\ooo=\@ooo
