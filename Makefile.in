# The extension should match that of pvs.system, src/pvs.lisp,
# ess/sys/tools/rel/box-system.lisp, and emacs/emacs-src/pvs-ilisp.el
ifeq ($(LISP),allegro)
  LISPEXE = @ALLEGRODIR@/mlisp8
  LD_LIBRARY_PATH = @ALLEGRODIR@:$LD_LIBRARY_PATH
  ifeq ($(PLATFORM),sun4-SunOS5)
    LISPEXT=fasl
  else
  ifeq ($(PLATFORM),ix86-Linux)
    LISPEXT=lfasl
  else
  ifeq ($(PLATFORM),powerpc-MacOSX7)
    LISPEXT=mfasl
  endif
  endif
  endif
endif
ifeq ($(LISP),cmulisp)
  ifeq ($(PLATFORM),sun4-SunOS5)
    LISPEXE = @SUNCMULISPDIR@/lisp
    LISPEXT=sparcf
  else
  ifeq ($(PLATFORM),ix86-Linux)
    LISPEXE = @LINUXCMULISPDIR@/lisp
    LISPEXT=x86f
  else
  ifeq ($(PLATFORM),powerpc-MacOSX7)
    LISPEXE = @MACPPCCMULISPDIR@/lisp
    LISPEXT=ppcf
  endif
  endif
  endif
endif

LOAD-FOREIGN-EXTENSION=so
export LD_LIBRARY_PATH
ifeq ($(PLATFORM),sun4-SunOS5)
	LISPEXT=fasl
else
ifeq ($(PLATFORM),ix86-Linux)
	LISPEXT=lfasl
else
ifeq ($(PLATFORM),powerpc-MacOSX7)
	LISPEXT=mfasl
	LOAD-FOREIGN-EXTENSION=dylib
else
ifeq ($(PLATFORM),ix86-MacOSX8)
        LISPEXT=nfasl
        LOAD-FOREIGN-EXTENSION=dylib
endif
endif
endif
endif

