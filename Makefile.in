CMULISPEXE = $(CMULISP_HOME)/bin/lisp
ifeq ($(shell if [ -x "$(CMULISPEXE)" ]; then echo OK; fi),OK)
# CMUVERSION = $(shell $(CMULISP_HOME)/bin/lisp -batch -eval '(progn (format t "~a" (lisp-implementation-version)) (terpri) (quit))')
