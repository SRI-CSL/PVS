full : $(image-deps)

runtime : $(image-deps)

ifeq ($(LISP),cmulisp)
$(pvsfull) : $(pvs-make-files) $(ess) $(ff-files) $(lisp-files) \
	  lib/prelude.pvs lib/prelude.prf
	mkdirhier $(bindir)/full
	$(LISPEXE) -eval '(load "pvs.system" :verbose t) \
                          (unwind-protect \
                              (pvs::operate-on-system :pvs :compile) \
                            (save-lisp "$(pvsfull).core" \
                                :init-function (function startup-pvs) \
                               ))'
	/bin/echo "#!/bin/sh" > $(pvsfull)
	/bin/echo "$(LISPEXE) -core \`dirname \$$0\`/\`basename \$$0\`.core" >> $(pvsfull)
	chmod a+x $(pvsfull)

$(PVSPATH)src/pvs-lexer.lisp : $(pvs-parser-in)
	umask 002; \
	$(LISPEXE) -load src/make-pvs-parser


$(PVSPATH)src/pvs-methods.lisp : $(PVSPATH)src/make-pvs-methods.lisp \
                       $(PVSPATH)src/defcl.lisp \
                       $(PVSPATH)src/classes-expr.lisp \
                       $(PVSPATH)src/classes-decl.lisp
	umask 002; \
	$(LISPEXE) -eval '(defvar *pvs-path* "/homes/owre/pvs3.3")' \
		   -load src/make-pvs-methods.lisp
endif

ifeq ($(LISP),allegro)
${pvsfull} : ${pvs-make-files} ${ess} ${ff-files} ${libics-file} ${lisp-files} \
             $(PVSPATH)lib/prelude.pvs $(PVSPATH)lib/prelude.prf
	rm -rf /tmp/pvs-allegro-build
	umask 002; \
	$(LISPEXE) -e '(load "$(PVSPATH)pvs.system")' \
		-e "(let ((code 1)) \
                      (unwind-protect \
                          (multiple-value-bind (v err) \
                            (ignore-errors (operate-on-system :pvs :compile)) \
                               (if err \
                                   (let ((*print-readably* nil)) \
                                     (format t \"~a\" err)) \
                                   (setq code 0)))) \
                        (excl:exit code)))"
	umask 002; $(ETAGS) ${lisp-files} ${pvs-emacs-src}
	touch $(PVSPATH)src/pvs-lexer.${LISPEXT}
	umask 002; \
	$(LISPEXE) -e '(defvar *runtime* nil)' \
		-L $(PVSPATH)src/make-pvs.lisp
	touch ${pvsfull}

${pvsrt} : ${pvs-make-files} ${ess} ${ff-files} ${libics-file} ${lisp-files} \
           $(PVSPATH)lib/prelude.pvs $(PVSPATH)lib/prelude.prf
	rm -rf /tmp/pvs-allegro-build
	umask 002; \
	$(LISPEXE) -e '(load "$(PVSPATH)pvs.system")' \
		-e "(let ((code 1)) \
                      (unwind-protect \
                          (multiple-value-bind (v err) \
                            (ignore-errors (operate-on-system :pvs :compile)) \
                               (if err \
                                   (let ((*print-readably* nil)) \
                                     (format t \"~a\" err)) \
                                   (setq code 0)))) \
                        (excl:exit code)))"
	umask 002; $(ETAGS) ${lisp-files} ${pvs-emacs-src}
	touch $(PVSPATH)src/pvs-lexer.${LISPEXT}
	umask 002; \
	$(LISPEXE) -e '(defvar *runtime* t)' \
		-L $(PVSPATH)src/make-pvs.lisp
	touch ${pvsrt}

$(PVSPATH)src/pvs-lexer.lisp : ${pvs-parser-in}
	umask 002; \
	$(LISPEXE) -L $(PVSPATH)src/make-pvs-parser

$(PVSPATH)src/pvs-methods.lisp : $(PVSPATH)src/make-pvs-methods.lisp \
                       $(PVSPATH)src/defcl.lisp \
                       $(PVSPATH)src/classes-expr.lisp \
                       $(PVSPATH)src/classes-decl.lisp
	umask 002; \
	$(LISPEXE) -e '(defvar *pvs-path* "@PVSPATH@")' \
		-L $(PVSPATH)src/make-pvs-methods.lisp
endif

parser : $(PVSPATH)src/pvs-lexer.lisp
.PHONY : parser

${LISP} :
	@echo "Need to set the LISP variable in Makefile to a valid"
	@echo "Common Lisp executable for this platform."

.PHONY: all makefileutils makebdd makews1s make-release-notes clean
makefileutils :
	umask 002; \
	$(MAKE) -C $(PVSPATH)src/utils/$(PLATFORM)
makebdd :
	umask 002; \
	$(MAKE) -C $(PVSPATH)BDD/$(PLATFORM)
makews1s :
	umask 002; \
	(cd $(PVSPATH)src/WS1S ; rm -rf mona ; ln -s mona-1.4 mona);\
	$(MAKE) -C $(PVSPATH)src/WS1S/$(PLATFORM)

make-release-notes : 
	$(MAKE) -C $(PVSPATH)doc/release-notes

#
# Release files.
#

runtime-image-tar = pvs-$(PLATFORM).tgz

full-image-tar = pvs-full-$(PLATFORM).tgz

system-tar = pvs-system.tgz

emacs19-tar = pvs-emacs19.tgz

source-tar = pvs-source.tgz

libraries-tar = pvs-libraries.tgz

tarfiles : ${release-notes} ${runtime-image-tar} ${full-image-tar} \
           ${system-tar} ${emacs19-tar} ${source-tar} ${libraries-tar}

runtime-image-files = $(wildcard ${bindir}/runtime/*)

full-image-files = $(wildcard ${bindir}/full/*)

release-notes = doc/release-notes/pvs-release-notes.info \
                doc/release-notes/pvs-release-notes.html \
                doc/release-notes/pvs-release-notes.ps \
                doc/release-notes/pvs-release-notes.pdf

system-files = README pvs pvsio pvs-tex.sub pvs.sty bin/relocate \
               bin/pvs-platform bin/tarmail bin/untarmail Examples \
               lib/prelude.pvs lib/prelude.prf lib/list_adt.pvs \
               lib/ordstruct_adt.pvs lib/character_adt.pvs \
	       lib/union_adt.pvs lib/lift_adt.pvs \
               lib/pvs-language.help lib/pvs-prover.help lib/pvs.help \
               lib/pvs.grammar lib/pvs.bnf wish/pvs-support.tcl \
               lib/strategies.lisp lib/pvs-style.css $(release-notes) \
               wish/gray.xbm wish/sequent.xbm \
               emacs/README emacs/go-pvs.el $(pvs-emacs-src) \
               emacs/emacs-src/pvs.xpm \
               $(ilisp-emacs-src) emacs/emacs20 emacs/xemacs21 \
               lib/PVSio

configure-files = Makefile.in README README.configure configure.in \
                  pvs.in pvs.system.in

bdd-sources = BDD/bdd-ld-table BDD/mu-ld-table \
              BDD/bdd_interface.c BDD/mu_interface.c \
              BDD/ix86-Linux/Makefile BDD/sun4-SunOS5/Makefile \
              BDD/bdd BDD/mu

ws1s-sources = src/WS1S/README src/WS1S/ws1s-ld-table \
               src/WS1S/ws1s_extended_interface.c src/WS1S/mona-1.4 \
               src/WS1S/ix86-Linux/Makefile src/WS1S/sun4-SunOS5/Makefile

emacs19-files = emacs/emacs19

lib/strategies.lisp : src/prover/strategies.lisp
	(cd lib; ln -sf ../src/prover/strategies.lisp strategies.lisp)

${runtime-image-tar} : ${pvsrt}
	$(TAR) $(TARFLAGS) -f ${runtime-image-tar} ${runtime-image-files}

${full-image-tar} : ${pvsfull}
	$(TAR) $(TARFLAGS) -f ${full-image-tar} ${full-image-files}

${system-tar} : ${system-files}
	$(TAR) $(TARFLAGS) -f ${system-tar} ${system-files}

${emacs19-tar} : $(emacs19-files)
	$(TAR) $(TARFLAGS) -f ${emacs19-tar} ${emacs19-files}

${source-tar} : ${pvs-make-files} ${configure-files} \
                src/make-allegro-pvs.lisp.in src/make-pvs.lisp.in \
                src/metering.lisp src/utils/utils-ld-table \
                src/utils/file_utils.c wish \
                ${ff-files} ${ess} ess/README ess/allegro-runtime.lisp.in \
                ess/dist-ess.lisp.in ess/term/terms/rel/*.txt \
                ${pvs-parser-in} ${lisp-files} \
                ${bdd-sources} ${ws1s-sources}
	$(TAR) $(TARFLAGS) -f $@ $^ --exclude CVS

${libraries-tar} : lib/finite_sets lib/bitvectors lib/PVSio
	$(TAR) $(TARFLAGS) -f $@ $^ --exclude CVS

tar : ${full-image-tar} ${runtime-image-tar} ${system-tar} \
      ${emacs19-tar} ${source-tar} ${libraries-tar}

install:
	@echo "target install is deprecated - read README.configure"

clean : 
	rm -f ${all-fasl-files}
	$(MAKE) -C src/utils/$(PLATFORM) clean
	$(MAKE) -C BDD/$(PLATFORM) clean
	$(MAKE) -C src/WS1S/$(PLATFORM) clean

pvs-emacs-src = $(wildcard $(PVSPATH)emacs/emacs-src/*.el) \
                $(PVSPATH)emacs/emacs-src/pvs-prelude-files-and-regions.el
ilisp-emacs-src = $(wildcard $(PVSPATH)emacs/emacs-src/ilisp/*.el)

pvs-emacs20-src = $(addprefix $(PVSPATH)emacs/emacs20/,$(notdir ${pvs-emacs-src}))
pvs-emacs19-src = $(addprefix $(PVSPATH)emacs/emacs19/,$(notdir ${pvs-emacs-src}))
pvs-xemacs21-src = $(addprefix $(PVSPATH)emacs/xemacs21/,$(notdir ${pvs-emacs-src}))
pvs-xemacs20-src = $(addprefix $(PVSPATH)emacs/xemacs20/,$(notdir ${pvs-emacs-src}))
pvs-xemacs19-src = $(addprefix $(PVSPATH)emacs/xemacs19/,$(notdir ${pvs-emacs-src}))

ilisp-emacs20-src = $(addprefix $(PVSPATH)emacs/emacs20/,$(notdir ${ilisp-emacs-src}))
ilisp-emacs19-src = $(addprefix $(PVSPATH)emacs/emacs19/,$(notdir ${ilisp-emacs-src}))
ilisp-xemacs21-src = $(addprefix $(PVSPATH)emacs/xemacs21/,$(notdir ${ilisp-emacs-src}))
ilisp-xemacs20-src = $(addprefix $(PVSPATH)emacs/xemacs20/,$(notdir ${ilisp-emacs-src}))
ilisp-xemacs19-src = $(addprefix $(PVSPATH)emacs/xemacs19/,$(notdir ${ilisp-emacs-src}))

$(PVSPATH)emacs/emacs-src/pvs-prelude-files-and-regions.el : lib/prelude.pvs ${pvsfull}
	-./pvs -batch -l emacs/emacs-src/pvs-set-prelude-info.el \
                        -f set-prelude-files-and-regions

$(PVSPATH)emacs/emacs20/%.el : emacs/emacs-src/%.el
	mkdir -p emacs/emacs20
	(cd emacs/emacs20; ln -sf ../emacs-src/$(@F) .)

$(PVSPATH)emacs/emacs19/%.el : emacs/emacs-src/%.el
	mkdir -p emacs/emacs19
	(cd emacs/emacs19; ln -sf ../emacs-src/$(@F) .)

$(PVSPATH)emacs/xemacs21/%.el : emacs/emacs-src/%.el
	mkdir -p emacs/xemacs21
	(cd emacs/xemacs21; ln -sf ../emacs-src/$(@F) .)

$(PVSPATH)emacs/xemacs20/%.el : emacs/emacs-src/%.el
	mkdir -p emacs/xemacs20
	(cd emacs/xemacs20; ln -sf ../emacs-src/$(@F) .)

$(PVSPATH)emacs/xemacs19/%.el : emacs/emacs-src/%.el
	mkdir -p emacs/xemacs19
	(cd emacs/xemacs19; ln -sf ../emacs-src/$(@F) .)

$(PVSPATH)emacs/emacs20/%.el : emacs/emacs-src/ilisp/%.el
	mkdir -p emacs/emacs20
	(cd emacs/emacs20; ln -sf ../emacs-src/ilisp/$(@F) .)

$(PVSPATH)emacs/emacs19/%.el : emacs/emacs-src/ilisp/%.el
	mkdir -p emacs/emacs19
	(cd emacs/emacs19; ln -sf ../emacs-src/ilisp/$(@F) .)

$(PVSPATH)emacs/xemacs21/%.el : emacs/emacs-src/ilisp/%.el
	mkdir -p emacs/xemacs21
	(cd emacs/xemacs21; ln -sf ../emacs-src/ilisp/$(@F) .)

$(PVSPATH)emacs/xemacs20/%.el : emacs/emacs-src/ilisp/%.el
	mkdir -p emacs/xemacs20
	(cd emacs/xemacs20; ln -sf ../emacs-src/ilisp/$(@F) .)

$(PVSPATH)emacs/xemacs19/%.el : emacs/emacs-src/ilisp/%.el
	mkdir -p emacs/xemacs19
	(cd emacs/xemacs19; ln -sf ../emacs-src/ilisp/$(@F) .)

ifeq ($(shell if [ -x ${emacs20} ] ; then echo OK ; fi), OK)
$(PVSPATH)emacs/emacs20/pvs-load.elc : ${pvs-emacs20-src} ${ilisp-emacs20-src}
	(cd emacs/emacs20; $(EMACS20) -batch -l pvs-byte-compile.el)
endif

ifeq ($(shell if [ -x ${emacs19} ] ; then echo OK ; fi), OK)
$(PVSPATH)emacs/emacs19/pvs-load.elc : ${pvs-emacs19-src} ${ilisp-emacs19-src}
	(cd emacs/emacs19; $(EMACS19) -batch -l pvs-byte-compile.el)
endif

ifeq ($(shell if [ -x ${xemacs21} ] ; then echo OK ; fi), OK)
$(PVSPATH)emacs/xemacs21/pvs-load.elc : ${pvs-xemacs21-src} ${ilisp-xemacs21-src}
	(cd emacs/xemacs21; $(XEMACS21) -batch -l pvs-byte-compile.el)
endif

ifeq ($(shell if [ -x ${xemacs20} ] ; then echo OK ; fi), OK)
$(PVSPATH)emacs/xemacs20/pvs-load.elc : ${pvs-xemacs20-src} ${ilisp-xemacs20-src}
	(cd emacs/xemacs20; $(XEMACS20) -batch -l pvs-byte-compile.el)
endif

ifeq ($(shell if [ -x ${xemacs19} ] ; then echo OK ; fi), OK)
$(PVSPATH)emacs/xemacs19/pvs-load.elc : ${pvs-xemacs19-src} ${ilisp-xemacs19-src}
	(cd emacs/xemacs19; $(XEMACS19) -batch -l pvs-byte-compile.el)
endif
