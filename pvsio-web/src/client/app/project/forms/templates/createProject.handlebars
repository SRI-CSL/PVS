<div class="form-center">
    <div class="panel panel-info dialog shadow center">
        <div class="panel-heading">New Project</div>
        <form class="center form-horizontal" onsubmit="return false" role="form">
            <div class="panel-body">
                <div class="form-group">
                    <label for="projectName" class="col-sm-4 control-label">Project Name</label>
                    <div class="col-sm-8">
                        <input id="projectName"
                               class="form-control"
                               type="text"
                               value="{{projectName}}"
                               placeholder="Please enter a project name..."
                               name="projectName"
                               required="true"
                               autofocus
                               autocomplete="on"
                               style="padding: 6px 12px;"/>
                        <script>document.getElementById("projectName").select();</script>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="prototypeImage">User Interface Picture</label>
                    <div class="col-sm-8">
                        <div class="input-group">
                            <input type="file"
                                   id="localPrototypeImage"
                                   name="localPrototypeImage"
                                   class="form-control"
                                   placeholder="Please select a prototype image..."
                                   accept="image/*"
                                   style="display:none"
                                   value=""/>
                            <input type="text"
                                   id="prototypeImage"
                                   name="prototypeImage"
                                   class="form-control"
                                   placeholder="Please select a prototype image..."
                                   readonly
                                   value=""/>
                            <span class="input-group-addon" id="btnChooseImage" style="cursor:pointer;">Select</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="pvsSpec">PVS Files</label>
                    <div class="col-sm-8">
                         <div class="input-group">
                             <input type="file"
                                    id="localPVSSpec"
                                    name="localPVSSpec"
                                    multiple="true"
                                    class="form-control"
                                    placeholder="Please select PVS model files..."
                                    accept=".pvs"
                                    style="display:none"
                                    value=""/>
                             <input type="text"
                                    id="pvsSpec"
                                    name="pvsSpec"
                                    multiple="true"
                                    class="form-control"
                                    placeholder="Please select PVS model files..."
                                    readonly
                                    value=""/>
                            <span class="input-group-addon" id="btnChooseSpec" style="cursor:pointer;">Select</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="button" class="btn btn-danger left" id="btnCancel">Cancel</button>
                <button type="submit" class="btn btn-success right" id="btnOk">OK</button>
            </div>
        </form>
    </div>
</div>