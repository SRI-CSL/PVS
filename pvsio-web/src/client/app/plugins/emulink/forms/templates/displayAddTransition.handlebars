<div class="form-center">
    <div class="panel panel-info shadow center">
        <div class="panel-heading">{{header}}</div>
        <form class="center form-horizontal" onsubmit="return false">
            <div class="panel-body" style="overflow-y: scroll; height: 180px;">
                <div class="form-group">
                    <label class="control-label col-sm-4" for="label">{{textLabel}}</label>
                    <div class="col-sm-8">
                        <input id="newLabel"
                               class="form-control"
                               type="text"
                               value=""
                               placeholder="Please enter label..."
                               name="newLabel"
                               required="true"
                               style="padding: 6px 12px;"/>
                        <script>document.getElementById("newLabel").select();</script>  
                    </div>                
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="sourceNode">Source node</label>
                    <div class="col-sm-8">
                        <select id="sourceNode"
                                class="form-control"
                                type="text"
                                value=""
                                name="sourceNode"
                                required="true">
                            {{#each sourceNodes}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="targetNode">Target node</label>
                    <div class="col-sm-8">
                        <select id="targetNode"
                                class="form-control"
                                type="text"
                                value=""
                                name="targetNode"
                                required="true">
                            {{#each targetNodes}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="button" class="btn btn-danger left" id="btnLeft">{{buttons.[0]}}</button>
                <button type="submit" class="btn btn-success right" id="btnRight">{{buttons.[1]}}</button>
            </div>
        </form>
    </div>
</div>