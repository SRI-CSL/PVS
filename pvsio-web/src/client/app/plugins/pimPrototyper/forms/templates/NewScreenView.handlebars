<div class="form-center">
    <div class="panel panel-info shadow center">
        <div class="panel-heading">Create Screen</div>
        <form class="center form-horizontal" onsubmit="return false">
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label col-sm-4">
                        Screen name
                    </label>
                    <div class="col-sm-8">
                        <input type="text" required name="screenName" class="form-control">
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="button" class="btn btn-default left btn-cancel">Cancel</button>
                <button type="submit" class="btn btn-success right btn-create">Create</button>
            </div>
        </form>
    </div>
</div>
